rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Avatars: Public read, User write
    match /avatars/{userId}/{imageId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
